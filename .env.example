# ===================================
# Configuration du serveur
# ===================================
PORT=3001
NODE_ENV=development

# ===================================
# Configuration de la session
# ===================================
SESSION_SECRET=votre_secret_session_tres_securise
SESSION_MAX_AGE=86400000 # 24h en millisecondes

# ===================================
# Configuration JWT
# ===================================
JWT_SECRET=votre_cle_secrete_tres_securisee
JWT_REFRESH_SECRET=votre_cle_rafraichissement_tres_securisee
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_EXPIRES_IN_SECONDS=3600  # 1h en secondes
JWT_REFRESH_EXPIRES_IN_SECONDS=604800  # 7j en secondes
JWT_ISSUER=lopango-api
JWT_AUDIENCE=lopango-app

# ===================================
# Configuration de l'application
# ===================================
APP_NAME=LOPANGO
APP_VERSION=1.0.0
SUPPORT_EMAIL=support@lopango.com

# ===================================
# Configuration de l'API
# ===================================
API_URL=http://localhost:3001
API_PREFIX=/api

# ===================================
# Configuration du client
# ===================================
CLIENT_URL=http://localhost:5173
EMAIL_VERIFICATION_URL=http://localhost:5173/verify-email
PASSWORD_RESET_URL=http://localhost:5173/reset-password

# ===================================
# Configuration des préfixes d'ID
# ===================================
# Préfixes pour les IDs des utilisateurs selon leur type
ID_PREFIX_ADMIN=ADM  # Administrateurs
ID_PREFIX_AGENT=AGN  # Agents immobiliers
ID_PREFIX_LANDLORD=LND  # Propriétaires
ID_PREFIX_TENANT=TNT  # Locataires
ID_PREFIX_USER=USR  # Utilisateurs standards

# ===================================
# Configuration de sécurité
# ===================================
# Sécurité des mots de passe
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Verrouillage de compte
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_TIME=15 # en minutes

# Jetons de réinitialisation
RESET_TOKEN_EXPIRES_IN=1h
EMAIL_VERIFICATION_EXPIRES_IN=24h

# ===================================
# Configuration du hachage de mot de passe
# ===================================
BCRYPT_SALT_ROUNDS=12

# ===================================
# Configuration de la base de données
# ===================================
DB_DIALECT=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=lopango
DB_USER=root
DB_PASSWORD=

# ===================================
# Configuration des emails (optionnel)
# ===================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=user@example.com
# SMTP_PASS=your-email-password
# EMAIL_FROM="LOPANGO Support <support@lopango.com>"

# ===================================
# Autres configurations
# ===================================
FRONTEND_URL=http://localhost:5173
SERVER_URL=http://localhost:3001
