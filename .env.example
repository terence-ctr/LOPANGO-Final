# ===================================
# Configuration du serveur
# ===================================
PORT=3001
NODE_ENV=development
HOST=0.0.0.0

# ===================================
# Configuration JWT
# ===================================
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_refresh_token_secret_change_in_production
JWT_REFRESH_EXPIRES_IN=7d

# ===================================
# Configuration de la base de données
# ===================================
DATABASE_URL=./server/database/lopango_dev.sqlite3
TEST_DATABASE_URL=./server/database/test.sqlite3

# ===================================
# Configuration CORS
# ===================================
CORS_ORIGIN=http://localhost:3000

# ===================================
# Configuration des emails (optionnel)
# ===================================
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@example.com
# EMAIL_PASSWORD=your-email-password
# EMAIL_FROM=noreply@lopango.com

# ===================================
# Configuration de l'application
# ===================================
APP_NAME=LOPANGO
APP_VERSION=1.0.0
FRONTEND_URL=http://localhost:3000

# ===================================
# Configuration des préfixes d'ID
# ===================================
ID_PREFIX_ADMIN=ADM  # Administrateurs
ID_PREFIX_AGENT=AGN  # Agents immobiliers
ID_PREFIX_LANDLORD=PRO  # Propriétaires
ID_PREFIX_TENANT=LOC  # Locataires
ID_PREFIX_LANDLORD=LND  # Propriétaires
ID_PREFIX_TENANT=TNT  # Locataires
ID_PREFIX_USER=USR  # Utilisateurs standards

# ===================================
# Configuration de sécurité
# ===================================
# Sécurité des mots de passe
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Verrouillage de compte
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_TIME=15 # en minutes

# Jetons de réinitialisation
RESET_TOKEN_EXPIRES_IN=1h
EMAIL_VERIFICATION_EXPIRES_IN=24h

# ===================================
# Configuration du hachage de mot de passe
# ===================================
BCRYPT_SALT_ROUNDS=12

# ===================================
# Configuration de la base de données
# ===================================
DB_DIALECT=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=lopango
DB_USER=root
DB_PASSWORD=

# ===================================
# Configuration des emails (optionnel)
# ===================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=user@example.com
# SMTP_PASS=your-email-password
# EMAIL_FROM="LOPANGO Support <support@lopango.com>"

# ===================================
# Autres configurations
# ===================================
FRONTEND_URL=http://localhost:5173
SERVER_URL=http://localhost:3001
